// RUN: marco --omc-bypass --model=ScalarVariablesSubstitution --end-time=1 --time-step=0.1 --solver=ida --ida-equidistant-time-grid -o %basename_t %s
// RUN: ./%basename_t | FileCheck %s

// CHECK: time;x;y
// CHECK-NEXT: 0.000000000000;0.000000000000;2.000000000000
// CHECK-NEXT: 0.100000000000;0.200000000000;2.000000000000
// CHECK-NEXT: 0.200000000000;0.400000000000;2.000000000000
// CHECK-NEXT: 0.300000000000;0.600000000000;2.000000000000
// CHECK-NEXT: 0.400000000000;0.800000000000;2.000000000000
// CHECK-NEXT: 0.500000000000;1.000000000000;2.000000000000
// CHECK-NEXT: 0.600000000000;1.200000000000;2.000000000000
// CHECK-NEXT: 0.700000000000;1.400000000000;2.000000000000
// CHECK-NEXT: 0.800000000000;1.600000000000;2.000000000000
// CHECK-NEXT: 0.900000000000;1.800000000000;2.000000000000
// CHECK-NEXT: 1.000000000000;2.000000000000;2.000000000000

model ScalarVariablesSubstitution
	Real x;
	Real y;
equation
	der(x) = y;
	y = 2.0;
end ScalarVariablesSubstitution;
